@model Clinic_System.Models.Appointment



@{
    ViewData["Title"] = "Create";
}

<h2>All fields are required</h2>

<h3 style="color:red">@ViewBag.Error</h3>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label">Patient Name</label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PractitionerID" class="control-label">Practitioner Name</label>
                <select asp-for="PractitionerID" class="form-control" asp-items="ViewBag.PractitionerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentDescr" class="control-label">Appointment Description</label>
                <input asp-for="AppointmentDescr" class="form-control" />
                <span asp-validation-for="AppointmentDescr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
